{
  "compilerOptions": {
    "lib": ["es2023"],
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "target": "es6",
    "outDir": "dist"
  },
  "include": ["src/**/*.js", "test/**/*.js"],
  "exclude": ["node_modules"]
}
