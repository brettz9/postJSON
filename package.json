  "description": "Simple function module for Node or the browser to send (and retrieve) JSON via HTTP POST.",
  "scripts": {
    "eslint": "eslint --ext=js,md,html .",
    "rollup": "rollup -c",
    "start-json-server": "node test/server",
    "start": "echo \"Open file to http://localhost:8008/test/\" && static -p 8008 | npm run start-json-server",
    "browser-test": "npm run eslint && npm run rollup && static -p 8008 | npm run start-json-server | open-cli http://localhost:8008/test/",
    "test": "npm run start-json-server | { sleep 1; mocha -r esm -r './test/node-env.js' './test/index.js' ; kill $(ps aux | grep '[n]ode test/server' | awk '{print $2}') ; }"
  },
  "keywords": [
    "json",
    "post"
  ],
  "bugs": "https://github.com/brettz9/postJSON/issues",
